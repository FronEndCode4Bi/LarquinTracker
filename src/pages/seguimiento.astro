---
import Layout from '../layouts/Layout.astro';
import TrackingForm from '../components/TrackingForm.jsx';
---

<Layout title="Seguimiento de Envíos">
  <main>
    <h1>Consulta el estado de tu servicio</h1>
    <p>
      Usa el siguiente formulario para obtener el historial completo de tu envío en tiempo real.
    </p>

    <TrackingForm client:load />

  </main>
</Layout>

<style>
  /* Estilos para la página en general */
  .page-header {
    text-align: center;
    margin-bottom: 1rem;
  }
  .page-header h1 { font-size: 2.5rem; }
  .page-header p { font-size: 1.1rem; color: #b0b0b0; }

  /* --- Estilos para el nuevo tracker --- */
  :global(.tracking-wrapper) {
    max-width: 800px;
    margin: 2rem auto;
  }
  :global(.tracking-form) {
    margin-bottom: 2rem;
  }
  :global(.input-group) { display: flex; gap: 0.5rem; }
  :global(input[type="text"]) {
    flex-grow: 1; padding: 0.75rem; border: 1px solid var(--color-gris);
    background-color: #fff; color: var(--color-negro); border-radius: 8px; font-size: 1rem;
  }
  :global(button) {
    padding: 0.75rem 1.5rem; border: none; background-color: var(--color-primario);
    color: var(--color-blanco); font-weight: bold; border-radius: 8px; cursor: pointer;
    transition: background-color 0.2s;
  }
  :global(button:hover) { background-color: var(--color-primario-hover); }

  /* Estilos para la tarjeta principal del tracker */
  :global(.tracker-card) {
    background-color: white;
    color: #333;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  /* Cabecera de la tarjeta */
  :global(.tracker-header) {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2.5rem;
  }
  :global(.tracker-header .header-label) {
    display: block;
    font-size: 0.8rem;
    color: #888;
  }
  :global(.tracker-header .header-value) {
    font-size: 1.1rem;
    font-weight: bold;
    color: #007bff;
  }

  /* Barra de Progreso */
  :global(.progress-bar-container) {
    display: flex;
    align-items: center;
    padding: 0 1rem;
    margin-bottom: 1rem;
  }
  :global(.step) {
    display: flex;
    align-items: center;
    flex-grow: 1; /* Para que las líneas se estiren */
  }
  :global(.step:last-child) {
    flex-grow: 0; /* El último paso no necesita estirarse */
  }

  :global(.node) {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: white;
    border: 3px solid #dbeafe; /* Gris claro por defecto */
    transition: all 0.4s ease;
    position: relative;
  }
  :global(.line) {
    width: 100%;
    height: 6px;
    background-color: #dbeafe; /* Gris claro por defecto */
    transition: background-color 0.4s ease;
  }

  /* Estilos para los pasos completados */
  :global(.step.completed .node) {
    border-color: #007bff;
    background-color: #007bff;
  }
  :global(.step.completed .node::after) {
    /* Creando el checkmark con CSS */
    content: '';
    position: absolute;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0 3px 3px 0;
    top: 3px;
    left: 7px;
    transform: rotate(45deg);
  }
  :global(.step.completed .line) {
    background-color: #007bff;
  }

  /* Etiquetas de Estado */
  :global(.status-labels) {
    display: flex;
    justify-content: space-between;
  }
  :global(.label-step) {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80px; /* Ancho fijo para cada etiqueta */
    color: #aaa;
    transition: color 0.4s ease;
  }
  :global(.label-step .icon) {
    font-size: 2rem; /* Tamaño para los emojis/iconos */
    margin-bottom: 0.5rem;
  }
  :global(.label-step span) {
    font-size: 0.8rem;
    text-align: center;
    font-weight: 500;
  }
  :global(.label-step.completed) {
    color: #333; /* Color de texto para estados completados */
  }
  
  /* Mensajes de estado y error */
  :global(.status-loading) { text-align: center; font-weight: bold; margin-top: 1rem; }
  :global(.status-error), :global(.error-state-message) {
    margin-top: 1.5rem; padding: 1rem; border-radius: 8px;
    text-align: center; background-color: #ffebee; color: var(--color-error); border: 1px solid var(--color-error);
  }
  /* --- AÑADIR ESTOS NUEVOS ESTILOS --- */

  /* Hacer que los pasos completados sean clickeables */
  :global(.step.completed), :global(.label-step.completed) {
    cursor: pointer;
  }

  /* Estilo para el nodo seleccionado (más grande y con sombra) */
  :global(.step.selected .node) {
    transform: scale(1.3);
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.6);
  }

  /* Estilo para la etiqueta seleccionada (más visible) */
  :global(.label-step.selected span) {
    color: var(--color-primario);
    font-weight: bold;
  }

  /* Panel de detalles y su animación de aparición */
  :global(.detail-panel) {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    margin-top: 1.5rem;
    padding: 0 1.5rem; /* El padding vertical se controla con max-height */
    max-height: 0; /* Oculto por defecto */
    opacity: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-in-out, opacity 0.5s ease-in-out, padding 0.5s ease-in-out;
  }
  
  :global(.detail-panel.visible) {
    max-height: 200px; /* Altura máxima para permitir la animación */
    opacity: 1;
    padding: 1.5rem;
  }

  :global(.detail-panel h3) {
    margin-top: 0;
    color: #333;
    border-bottom: 2px solid var(--color-primario);
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
  }

  :global(.detail-panel p) {
    color: #555;
    margin: 0.5rem 0;
  }
  :global(.detail-panel p strong) {
    color: #333;
  }
</style>